
{
    "name": "Ecotagger",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "action": {},
    "content_security_policy": {
      "extension_pages": "default-src 'self'; connect-src https://* data: blob: filesystem:;"
    },
    "permissions": [
      "*://*.github.com/*",
      "http://127.0.0.1:5000/*",
      "tabs"

  ],
  "host_permissions": [
    "https://github.com/*",
    "http://127.0.0.1:5000/*",
    "*://*/*"
  ],
    "content_scripts": [
      {
        "matches": ["https://*.github.com/*/*/issues*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ]
  }